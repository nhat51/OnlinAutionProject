@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Main Container  -->
<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Account</a></li>
        <li><a href="#">Login</a></li>
    </ul>

    <div class="row">
        <div id="content" class="col-sm-12 r">
            <div class="page-login">
                <div class="account-border">
                    <form id="account" method="post">
                        <div class="col-sm-6 customer-login">
                            <div class="well">
                                <h2><i class="fa fa-file-text-o" aria-hidden="true"></i> Returning Customer</h2>
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <div class="form-group">
                                    <label class="control-label " asp-for="Input.Email">E-Mail Address</label>
                                    <input  asp-for="Input.Email" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label class="control-label " asp-for="Input.Password">Password</label>
                                    <input  asp-for="Input.Password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label class="control-label " asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>

                                </div>
                            </div>
                            <div class="bottom-form">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="forgot">Forgotten Password</a>
                                <button type="submit" class="btn btn-default pull-right">Login</button>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-sm-6 new-customer">
                            <div class="well">
                                <h2><i class="fa fa-file-o" aria-hidden="true"></i> New Customer</h2>
                                <p>By creating an account you will be able to shop faster, be up to date on an order's status, and keep track of the orders you have previously made.</p>
                            </div>
                            <div class="bottom-form">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-default pull-right">Continue</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- //Main Container -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
