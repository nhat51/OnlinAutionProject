@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}



<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<h2 class="title">My Account</h2>
<p class="lead">Hello</p>
<form class="submit" method="post">
    <div class="row">
        <div class="col-sm-12">
            <fieldset id="personal-details">
                <legend>Personal Details</legend>
                <div class="col-sm-6">
                    <div class="form-group ">
                        <label class="control-label" asp-for="Input.FirstName">First Name</label>
                        <input class="form-control nhatclass" id="firstname" asp-for="Input.FirstName" readonly />
                    </div>
                    <div class="form-group ">
                        <label class="control-label"  asp-for="Input.LastName">Last Name</label>
                        <input class="form-control nhatclass" id="lastname" asp-for="Input.LastName" readonly />
                    </div>
                    <div class="form-group">
                        <label class="control-label" >Telephone</label>
                        <input class="form-control nhatclass" id="telephone" asp-for="Input.PhoneNumber" readonly>
                    </div>
                    <div class="form-group ">
                        <label class="control-label" for="email">E-mail</label>
                        <input class="form-control nhatclass" id="email" asp-for="Input.Email" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group ">
                        <label class="control-label" for="username">User Name</label>
                        <input class="form-control" id="username" asp-for="Username" readonly>
                    </div>
                    <div class="form-group">
                        <label class="control-label " for="gender">Gender</label>
                        <select asp-for="Input.Gender" id="genderOption" class="form-control nhatclass" disabled>                            
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option> 
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Input.DateOfBirth">Date Of Birth</label>
                        <input type="date" class="form-control" id="dob" asp-for="Input.DateOfBirth" readonly>
                       
                    </div>
                </div>
            </fieldset>
            <input id="changeButton" type="button" value="Change Profile" onclick="Input()">
            <button id="saveButton" type="submit" hidden>Save</button>
        </div>
    </div>

</form>

