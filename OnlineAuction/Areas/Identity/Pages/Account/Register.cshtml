@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Account</a></li>
        <li><a href="#">Register</a></li>
    </ul>

    <div class="row">
        <div id="content" class="col-sm-12">
            <h2 class="title">Register Account</h2>
            <p>If you already have an account with us, please login at the <a href="#">login page</a>.</p>
            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal account-register clearfix">
                <fieldset id="account">
                    <legend>Your Personal Details</legend>                  
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.FirstName">First Name</label>
                        <div class="col-sm-10">
                            <input asp-for="Input.FirstName" class="form-control">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.LastName">Last Name</label>
                        <div class="col-sm-10">
                            <input  asp-for="Input.LastName" placeholder="Last Name"  class="form-control">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.Email">E-Mail</label>
                        <div class="col-sm-10">
                            <input asp-for="Input.Email" id="input-email" class="form-control">
                        </div>
                    </div>                   
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.Gender">Gender</label>
                        <div class="col-sm-10">
                            <select asp-for="Input.Gender" class="form-control" required>
                                <option value="" > --- Please Select --- </option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.DateOfBirth">Date Of Birth</label>
                        <div class="col-sm-10">
                            <input type="date" asp-for="Input.DateOfBirth" class="form-control">
                        </div>
                    </div>
                </fieldset>
                
                <fieldset>
                    <legend>Your Password</legend>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label"  asp-for="Input.Password">Password</label>
                        <div class="col-sm-10">
                            <input value="" placeholder="Password" asp-for="Input.Password" class="form-control">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.ConfirmPassword">Password Confirm</label>
                        <div class="col-sm-10">
                            <input  asp-for="Input.ConfirmPassword" class="form-control">
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>
                <div class="buttons">
                    <div class="pull-right">
                        
                        <button type="submit" value="Continue" class="btn btn-primary">Register</button>
                    </div>
                </div>
               
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
