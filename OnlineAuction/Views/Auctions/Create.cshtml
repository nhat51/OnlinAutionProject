@model OnlineAuction.ViewModels.CreateAuctionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="breadcrumb">
    <li><a href="#"><i class="fa fa-home"></i></a></li>
    <li><a href="#">Auction Register</a></li>
</ul>
<div class="row">
    <div id="content" class="col-sm-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="form-horizontal account-register clearfix">

            <fieldset id="address">
                <legend>Product Detail </legend>
                <div class="form-group required">
                    <label asp-for="Product_Name" class="col-sm-2 control-label">Product Name</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Product_Name" class="form-control">
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="">Category</label>
                    <div class="col-sm-10">
                        <select name="city_id" class="form-control">
                            <option value=""> --- Please Select --- </option>
                            @foreach (var item in Model.Categories)
                            {
                                <option value="32">@item.Category_Name</option>
                            }


                        </select>
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="">Sub Category</label>
                    <div class="col-sm-10">
                        <select name="city_id" id="" class="form-control">
                            <option value=""> --- Please Select --- </option>
                            @foreach (var item in Model.Sub_Categories)
                            {
                                <option value="32"> @item.Sub_Category_Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-address-1">Description</label>
                    <div class="col-sm-10">
                        <textarea type="text" asp-for="ProductDescription" name="address_1" class="form-control"></textarea>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" asp-for="Product_Image" for="input-address-1">Product Images</label>
                    <div class="col-sm-10">
                        <div class="container center">
                        </div>
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3 center">
                                <div class="btn-container">
                                    <input type="file" value="" asp-for="Product_Image" name="fileup" id="fileup" multiple>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" asp-for="StartPrice">Start Price</label>
                    <div class="col-sm-10">
                        <input type="text" value="" asp-for="StartPrice" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">                     
                        <button type="submit" class="btn btn-default" id="fakebtn">Submit!</button>
                    </div>
                </div>

            </fieldset>
        </form>
    </div>
</div>
