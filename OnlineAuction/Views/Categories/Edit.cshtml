@model OnlineAuction.Models.Category;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="container">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <a class="btn btn-default" asp-action="Index">&lt; Back to List</a>
                </div>
                <div class="form-group">
                    <label asp-for="Category_Name" class="control-label"></label>
                    <input asp-for="Category_Name" class="form-control" />
                    <span asp-validation-for="Category_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category_Image" class="control-label"></label>
                    <input asp-for="Category_Image" class="form-control" type="file" accept="image/*" required/>
                    <span asp-validation-for="Category_Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
