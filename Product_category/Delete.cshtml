@model OnlineAuction.Models.Product_category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3 class="text-warning">Are you sure you want to delete this?</h3>
<div class="text-center">
    <h4>Product_category</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dd>
            <h3>@Html.DisplayFor(model => model.Category)</h3>
        </dd>
        <dd>
            <img class="img img-thumbnail" src="~/image/catalog/demo/category/@Html.DisplayFor(model => model.Cat_Image)" alt="Alternate Text" />            
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Back to List</a>
    </form>
</div>
