@model IEnumerable<OnlineAuction.Models.Product_category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main Container  -->
<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a></li>
        <li><a href="#">Admin</a></li>

    </ul>
    <div class="row">
        <!--Left Part Start -->
        <aside class="col-md-3 col-sm-4 col-xs-12 content-aside left_column " id="column-left">
            <div class="module blog-category titleLine">
                <h3 class="modtitle">Admin Manage</h3>
                <div class="modcontent">
                    <ul class="list-group ">
                        <li class="list-group-item"> <a href="auction_manage.html" class="group-item active">Auction Manage</a></li>
                        <li class="list-group-item"><a asp-controller="Product_category" asp-action="Index" class="group-item">Category Manage</a></li>
                    </ul>

                </div>
            </div>
        </aside>
        <div id="content" class="col-sm-9">
            <div class="row">
                <div class="col-md-10">
                    <h2 class="title">Categories</h2>
                </div>
                <div class="col-md-2 text-right">
                    <a class="btn btn-success" asp-action="Create"><i class="fa fa-plus"></i></a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.Cat_Image)
                            </th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.ID"> @Html.DisplayFor(modelItem => item.Category)</a>
                                </td>
                                <td class="text-center">
                                    <img class="img-thumbnail" src="~/image/catalog/demo/category/@Html.DisplayFor(modelItem => item.Cat_Image)" alt="@Html.DisplayFor(modelItem => item.Category)_Images" />
                                </td>
                                <td class="text-center">
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-edit"></i></a>
                                    <a class="btn btn-danger"  asp-action="Delete" asp-route-id="@item.ID"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--Left Part End -->
        </div>
    </div>
    <!-- //Main Container -->